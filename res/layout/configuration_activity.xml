<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000"
    android:textColor="#fff"
    tools:context=".ConfigurationActivity" >
    
    <TextView
        android:id="@+id/descriptionSampleCount_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_of_samples_to_calculate_average"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/startSampleCount_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/descriptionSampleCount_textView"
        android:layout_below="@+id/descriptionSampleCount_textView"
        android:layout_marginTop="5dp"
        android:text="@string/reference_level"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/startSampleCountValue_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/startSampleCount_textView"
        android:layout_below="@+id/descriptionSampleCount_textView"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textIsSelectable="false" />

    <SeekBar
        android:id="@+id/startAvgMax_seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionSampleCount_textView"
        android:layout_toRightOf="@+id/startSampleCountValue_textView" />

    <TextView
        android:id="@+id/currentSampleCount_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/descriptionSampleCount_textView"
        android:layout_below="@+id/startAvgMax_seekBar"
        android:text="@string/current_level"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/currentSampleCountValue_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/currentSampleCount_textView"
        android:layout_below="@+id/startAvgMax_seekBar"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textIsSelectable="false"/>

    <SeekBar
        android:id="@+id/currentAvgMax_seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startAvgMax_seekBar"
        android:layout_toRightOf="@+id/currentSampleCountValue_textView" />
    
    <Button
        android:id="@+id/resetDefault_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/descriptionSampleCount_textView"
        android:layout_below="@+id/currentAvgMax_seekBar"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/reset_to_default" />

    <TextView
        android:id="@+id/sensorSpeed_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetDefault_button"
        android:layout_alignLeft="@+id/descriptionSampleCount_textView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/sensor_speed_describtion"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:textIsSelectable="false" />

    <RadioGroup
        android:id="@+id/sensorSpeed_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensorSpeed_textView"
        android:layout_alignLeft="@+id/descriptionSampleCount_textView" >

        <RadioButton
            android:id="@+id/sensorSlow_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sensor_speed_slow"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/sensorNormal_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sensor_speed_normal"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/sensorFast_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sensor_speed_fast"
            android:textColor="#fff" />
    </RadioGroup>

</RelativeLayout>